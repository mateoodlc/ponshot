---
interface News {
  date: string;
  title: string;
  description: string;
  image: string;
  link: string;
}

const newsData: News[] = [
  {
    title: '¡Nueva actualización de Ponshot!',
    description: 'Descubre las nuevas mecánicas y mejoras en la última actualización de Ponshot.',
    image: '/assets/images/pyrobito-news--d.jpg',
    date: '2024/03/20',
    link: 'https://steam.com/news/1'
  },
  {
    title: 'Torneo Ponshot Championship',
    description: 'Participa en el primer torneo oficial de Ponshot con premios increíbles.',
    image: '/assets/images/pyrobito-news--d.jpg',
    date: '2024/03/18',
    link: 'https://steam.com/events/1'
  },
  {
    title: 'Ponshot alcanza 100,000 jugadores',
    description: '¡Gracias a todos por hacer de Ponshot un éxito! Celebramos este hito con regalos especiales.',
    image: '/assets/images/pyrobito-news--d.jpg',
    date: '2024/03/15',
    link: 'https://steam.com/events/1'
  },
]; 

---

<section class="ponshot-block ponshot-block--flush-spaced">
  <div class="section-content">
    <h2>Noticias y Actualizaciones</h2>
    <ul class="news__list">
      {
        newsData.map((news) => <li class="news__list-item">
          <div class="news__image-wrapper">
            <img class="news__image" alt={news.title} src={news.image}>
          </div>
          <span class="news__date">{news.date}</span>
          <h3 class="news__title">{news.title}</h3>
          <p class="news__description">{news.description}</p>
          <a class="news__link" href={news.link}></a>
        </li>)
      }
    </ul>
  </div>
</section>

<style lang="scss" scoped>
  .ponshot-block {
    background: linear-gradient(180deg,rgba(20, 20, 20, 1) 0%, rgba(0, 0, 0, 1) 100%);
  }
  .news {
    &__list {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(30rem, 1fr));
      gap: 3rem;
      margin-top: 4rem;
    }

    &__list-item {
      position: relative;
      display: flex;
      flex-direction: column;
      gap: 1.6rem;

      &:hover {
        .news__image {
          transform: scale(1.2);
        }
      }
    }

    &__image-wrapper {
      width: 100%;
      aspect-ratio: 16 / 10;
      overflow: hidden;
    }
    
    &__image {
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: transform 0.3s;
    }

    &__title {
      text-transform: uppercase;
      font-size: 2.4rem;
    }

    &__date {
      letter-spacing: 1px;
    }

    &__link {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
    }
  }
</style>
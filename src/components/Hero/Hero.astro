---
import { Image } from 'astro:assets';
import Logo from '../Logo/Logo.astro';
import Button from '../../components/Button/Button.astro'

let isVertical = false;

---

<div id="homepage-video" class="hero">
  <div class="hero__video">
    <iframe 
      id="homepage-video" 
      class="video-iframe" 
      class:list={['hero', { 'vertical': isVertical }, { 'horizontal': !isVertical }]}
      src="https://www.youtube.com/embed/aJolMZPjCKM?autoplay=1&start=20&end=150&mute=1&controls=0&showinfo=0&modestbranding=1&loop=1&playlist=aJolMZPjCKM"
      frameborder="0" 
      allow="autoplay; fullscreen; picture-in-picture; clipboard-write"
      title="Ponshot Trailer"
      loading="lazy">
    </iframe>
  </div>
  <div class="hero__content">
    <img src="/assets/ponshot-logo.svg" class="hero__logo" alt="Ponshot Logo" />
     <!-- <Logo class="hero__logo" /> -->
    <div class="hero__actions">
      <Button>Comprar Ahora</Button>
      <Button variant="alternative">Ver trailer</Button>
    </div>
  </div>
</div>

<script>
  // Movemos la lÃ³gica al cliente
  const setVideoOrientation = () => {
    const aspectRatio = window.innerWidth / window.innerHeight;
    const targetAspectRatio = 16 / 9;
    const isVertical = aspectRatio < targetAspectRatio;
    
    const iframe = document.querySelector('.video-iframe');
    if (iframe) {
      iframe.classList.toggle('vertical', isVertical);
      iframe.classList.toggle('horizontal', !isVertical);
    }
  }

  window.addEventListener('resize', setVideoOrientation);
  setVideoOrientation();
</script>

<style lang="scss" scoped>
  @use '../../styles/colors' as *;

  .hero {
    position: relative;
    min-height: 100svh;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: black;
    z-index: 1;

    &::after {
      content: '';
      display: block;
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 102%;
      background: linear-gradient(180deg,rgba(20, 20, 20, 0.1) 0%, rgba(#141414, 1) 97%);
    }

    &__video {
      display: block;
      position: absolute;
      top: 0;
      left: 50%;
      transform: translateX(-50%);
      height: 100svh;
      width: 100vw;
      overflow: hidden;
      background-color: black;
      pointer-events: none;
    }

    &__logo {
      opacity: 0.7;
      transform: translateX(-7%);
    }

    &__video iframe {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translateX(-50%) translateY(-50%);
      &.horizontal {
        aspect-ratio: 16 / 9;
        width: 100%;
      }

      &.vertical {
        aspect-ratio: 2;
        height: 100svh;
      }
    }

    &__content {
      position: relative;
      display: flex;
      flex-direction: column;
      gap: 4rem;
      z-index: 1;
    }

    &__actions {
      display: flex;
      flex-wrap: wrap;
      column-gap: 4rem;
      row-gap: 1rem;
      align-items: center;
      justify-content: center;
    }
  }
</style> 